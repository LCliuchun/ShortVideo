<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VideoRecordBtn">
        <attr name="inner_circle_color" format="color"/>
        <attr name="out_circle_color" format="color"/>
        <attr name="inner_circle_radius" format="integer"/>
        <attr name="out_circle_size" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="themeColor" format="color"/>
        <attr name="titleBackground" format="color|reference"/>
        <attr name="rightImage" format="color|reference"/>
        <attr name="leftImage" format="color|reference"/>
        <attr name="rightText" format="string"/>
        <attr name="title" format="string"/>
        <attr name="showLeftButton" format="boolean"/>
    </declare-styleable>
</resources>