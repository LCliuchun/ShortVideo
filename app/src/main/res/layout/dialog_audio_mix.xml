<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mix_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0000" />

    <RelativeLayout
        android:background="#B2000000"
        android:layout_width="match_parent"
        android:layout_height="188dp">
        <TextView
            android:id="@+id/cancel_btn"
            android:textSize="14dp"
            android:text="取消"
            android:textColor="#999"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/commit_btn"
            android:layout_marginTop="2dp"
            android:layout_marginRight="6dp"
            android:padding="10dp"
            android:text="完成"
            android:layout_alignParentRight="true"
            android:textColor="#fa316c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/yuansheng"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="72dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="原声"
            android:textColor="#fff" />

        <SeekBar
            android:layout_marginLeft="15dp"
            android:layout_marginRight="16dp"
            android:layout_alignBottom="@+id/yuansheng"
            android:layout_alignTop="@+id/yuansheng"
            android:layout_toRightOf="@+id/yuansheng"
            android:id="@+id/fg_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="100" />


        <TextView
            android:layout_marginLeft="16dp"
            android:layout_marginTop="128dp"
            android:id="@+id/back_ground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="背景音乐"
            android:textColor="#fff" />

        <SeekBar
            android:layout_marginRight="16dp"
            android:layout_alignBottom="@+id/back_ground"
            android:layout_alignTop="@+id/back_ground"
            android:layout_alignLeft="@+id/fg_volume"
            android:id="@+id/bg_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="100" />



    </RelativeLayout>
</LinearLayout>